@inherits LayoutComponentBase
@inject DMsite.Services.AuthService Auth
@inject NavigationManager Nav

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (Auth.IsLoggedIn)
            {
                <span class="me-3">Γεια σου, @(Auth.Session?.User?.Email ?? "User")!</span>
                <button class="btn btn-link" @onclick="Logout">Αποσύνδεση</button>
            }
            else
            {
                <a href="login" class="me-3">Σύνδεση</a>
                <a href="register">Εγγραφή</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool isLoaded = false;

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();
        isLoaded = true;
    }
    private void Logout()
    {
        Auth.Logout();
        Nav.NavigateTo("/", forceLoad: true);
    }
}