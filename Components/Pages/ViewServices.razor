@page "/services"
@inject SupabaseService Supabase

<h1>Our Services</h1>

@if (services == null)
{
    <p>Loading services...</p>
}
else
{
    <div class="services-grid">
        @foreach (var s in services)
        {
            <a class="service-card" href="/services/@s.Id">
                <h3>@s.Name</h3>
                <p>@s.Duration</p>
                <p><strong>@s.Price €</strong></p>
            </a>
        }
    </div>
}

@code {
    private List<Service>? services;

    protected override async Task OnInitializedAsync()
    {
        services = await Supabase.GetServicesAsync();
    }
}

<style>
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1rem;
    }

    .service-card {
        border: 1px solid #ddd;
        padding: 16px;
        border-radius: 8px;
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s;
    }

        .service-card:hover {
            transform: scale(1.02);
            background: #f9f9f9;
        }
</style>
